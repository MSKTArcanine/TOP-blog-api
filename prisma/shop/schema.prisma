generator client {
  provider = "prisma-client-js"
  output   = "../../generated/shop"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_SHOPWARS")
}

model Items {
    id Int @id @default(autoincrement())
    title String
    desc String
    isPromo Boolean?
    price Float
    stock Int
    image String
}

model Users {
    id String @id @default(uuid())
    username String
    hashedPassword Int
}